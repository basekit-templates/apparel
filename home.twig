{% extends "layout.twig" %}

{% block content %}

{% include "includes/header.twig" %}

<div class="profile-header">
    <div class="header-wrapper">
        <div class="widgetcontent-left">
            {{widget('content', 'widgetcontentleft', {content: '<p>Lorem ipsum dolor sit amet</p>'})|raw}}
        </div>
        <div class="widgetprofile-right">
            {{widget('profile', 'footerprofilesocialicons', { 'profileType':'socialicons', 'socialicons':'profile'})|raw}}
        </div>
    </div>
</div>

<div class="homepage-slideshow">
	{{widget('responsiveslideshow', 'slideshow', {
	    'duration':'3',
	    'transSpeed': '1000',
	    'transType': 'fade',
	    'showButtons': true,
	    'showBullets': false,
	    'allowPause': false,
	    'allowLoop': true,
	    'images':[
	      {
	        'imageHeight':'350',
	        'imageWidth':'300',
	        'url':'images/slideshow-1.jpg',
	        'title':'First slide title',
	        'description': 'First slide description'
	      },
	      {
	        'imageHeight':'350',
	        'imageWidth':'400',
	        'url':'http://placehold.it/350x400', 
	        'title':'Second slide title',
	        'description': 'Second slide description'
	      },
	      {
	        'imageHeight':'350',
	        'imageWidth':'500',
	        'url':'http://placehold.it/350x500',
	        'title':'Third slide title',
	        'description': 'Third slide description'
	      }
	    ]
	})|raw}}
</div>

<div class="logo-banner">
   	<div class="header-wrapper">
      	<div class="logo-banner-left">
          	{{widget('content', 'logobannerleft1', {content: '<h1>Lorem ipsum dolor sit amet</h1>'})|raw}}
          	{{widget('content', 'logobannerleft2', {content: '<h4>Lorem ipsum dolor sit amet</h4>'})|raw}}
      	</div>
      	<div class="logo-banner-center">
      	    {{widget('logo', 'sitelogo', {"defaultlogo": asset('images/logo.png')})|raw}}
      	</div>
      	<div class="logo-banner-right">
      	    {{widget('content', 'logobannerright1', {content: '<h1>Lorem ipsum dolor sit amet</h1>'})|raw}}
      	    {{widget('content', 'logobannerright2', {content: '<h4>Lorem ipsum dolor sit amet</h4>'})|raw}}
      	</div>
   	</div>
</div>

<!-- Container -->
<div class="container">

	<!-- Page Content -->
	<section class="template-content">

		<!-- Main Widet Zone -->
	   	{{zone('main')|raw}}

	</section>
	<!-- End Page Content -->

</div>
<!-- End Container -->

{% include "includes/footer.twig" %}

{% endblock %}
